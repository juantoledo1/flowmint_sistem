// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  usuario_id Int      @id @default(autoincrement())
  nombre     String
  apellido   String
  dni        String?
  user       String   @unique
  pass       String
  correo     String?
  rol_id     Int      @default(2)
  estado     String   @default("A")
  
  // Relación
  rol        Rol      @relation(fields: [rol_id], references: [rol_id])
}

model Rol {

  rol_id    Int       @id @default(autoincrement())

  nombre    String

  // Relación inversa

  usuarios  Usuario[]

}



model Cliente {

  cliente_id Int    @id @default(autoincrement())

  nombre     String

  apellido   String

  telefono   String?

  email      String? @unique



  turnos Turno[]

}



model Empleado {

  empleado_id Int    @id @default(autoincrement())

  nombre      String

  apellido    String

  puesto      String?



  turnos Turno[]

}



model Servicio {

  servicio_id Int     @id @default(autoincrement())

  nombre      String

  descripcion String?

  precio      Float

  duracion    Int // en minutos



  turnos Turno[]

}



model Turno {

  turno_id   Int      @id @default(autoincrement())

  fecha_hora DateTime

  estado     String   @default("pendiente") // pendiente, confirmado, cancelado



  cliente_id Int

  cliente    Cliente @relation(fields: [cliente_id], references: [cliente_id])



  empleado_id Int

  empleado    Empleado @relation(fields: [empleado_id], references: [empleado_id])



  servicio_id Int

  servicio    Servicio @relation(fields: [servicio_id], references: [servicio_id])

}
